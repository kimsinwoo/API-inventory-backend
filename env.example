# ========================================
# 재고 관리 시스템 환경 변수 설정
# ========================================
# 이 파일을 .env 로 복사하여 사용하세요

# 서버 설정
NODE_ENV=development
PORT=4000

# 데이터베이스 설정
DEV_DB_PASSWORD=your_dev_password_here
PRODUCTION_DB_PASSWORD=your_production_password_here

# 세션 설정
SESSION_SECRET=your-secret-key-change-this-in-production-minimum-32-characters

# JWT 설정 (향후 확장용)
JWT_SECRET=your-jwt-secret-key-change-this
JWT_EXPIRES_IN=7d

# CORS 설정
CORS_ORIGIN=http://localhost:3000

# 파일 업로드 설정
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# 알림 설정
ENABLE_NOTIFICATIONS=true
LOW_STOCK_THRESHOLD_DAYS=7
EXPIRY_WARNING_DAYS=3

# 이메일 설정 (선택사항)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password
NOTIFICATION_EMAIL=admin@company.com

# 백업 설정
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# 로그 설정
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# 리포트 설정
REPORT_GENERATION_TIME=08:00
REPORT_RECIPIENTS=admin@company.com,manager@company.com

